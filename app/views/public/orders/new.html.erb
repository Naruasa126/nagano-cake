<div class="mx-auto col-7 col-sm-10">
   <div class="col-6 col-sm-5 text-left">
    <div style="padding-top:20px;">
     <span style="font-size:20px; background-color:#dcdcdc;">
      注文情報入力
     </span>
    </div>
   </div>

   <%= form_with model:@order, url: public_orders_confirm_path, local: true do |f| %>
   <div class="field">
    <div class="field-head">
     <div style="padding-top:5px;">
      <span style="font-size:20px;">
       支払方法
      </span>
     </div>
    </div>
    <div class="field-body">
     <p>
       <%= f.radio_button :payment_method, "credit_card" %>
       <%= f.label :payment_method, "クレジットカード" %>
     </p>
     <p>
       <%= f.radio_button :payment_method, "transfer" %>
       <%= f.label :payment_method, "銀行振込" %>
     </p>
    </div>

    <div class="field">
     <div class="field-head">
      <div style="padding-top:5px;">
       <span style="font-size:20px;">
        お届け先
       </span>
      </div>
     </div>
     <div class="field-body">
      <p>
       <%= f.radio_button :customer_address, "0" %>
       <%= f.label :customer_address, "ご自身の住所" %>
      </p>
      <p>
       <%= current_customer.full_address %>
      </p>
      <p>
       <%= f.radio_button :customer_address, "1" %>
       <%= f.label :customer_address, "登録済み住所から選択" %>
      </p>
      <p>
       <%= f.collection_select(:address_id, Address.all, :id, :full_address)%>
      </p>
      <p>
       <%= f.radio_button :customer_address, "2" %>
       <%= f.label :customer_address, "新しいお届け先" %>
       <div class="form-group">
        <table cellpadding="2">
         <tr>
          <td scope="row" >郵便番号（ハイフンなし）</td>
          <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
          <td></td>
         </tr>
         <tr>
          <td scope="row" >住所</td>
          <td colspan="3"><%= f.text_field :address, :size=>"50px", placeholder:"東京都渋谷区代々木神園町０－０" %></td>
          <td></td>
         </tr>
         <tr>
          <td scope="row" >宛名</td>
          <td><%= f.text_field :name, placeholder:"令和道子" %></td>
          <td></td>
         </tr>
        </table>
      </p>

        <div class="actions">
         <div class="col-sm-10 text-center">
          <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
         </div>
        </div>

     </div>
    </div>
    <% end %>
</div>