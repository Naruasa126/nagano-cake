<div class="mx-auto col-10 col-sm-10">

 <div class="row">
   <div class="col-3 col-sm-3 ">
    <div style="padding-top:50px;">
     <%= attachment_image_tag @items, :image, size:"350x250" %>
    </div>
   </div>

   <div class="col-5 offset-2 ">

    <div class="field">
     <div style="padding-top:50px;">
       <div class="col-sm-13">
         <span style="font-size:30px;">
          <%= @items.name  %>
         </span>
       </div>
      </div>
    </div>

    <div class="field">
     <div style="padding-top:20px;">
       <div class="col-sm-8">
         <p><%= @items.introduction %></p>
       </div>
     </div>
    </div>

    <div class="field">
     <div style="padding-top:10px;">
      <div class="col-sm-6">
       <span style="font-size:20px;">
        <%= number_to_currency(@items.tax_price, unit: "¥", strip_insignificant_zeros: true) %>
       </span>
      </div>
     </div>
    </div>

    <div class="actions">
     <div class="text-center">
      <div class="row">
       <div style="padding-top:10px;">
       <%= form_with model:@cart_item, url: public_cart_items_path, local: true do |f| %>
        <div class="text-center">
         <%= f.select :amount, *[1..10], placeholder: "個数選択" %>
        </div>
        <%= f.hidden_field :item_id, :value => @items.id %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <div class="offset-2">
         <div style="padding-top:30px;">
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
         </div>
        </div>
       <% end %>
       </div>
      </div>
     </div>
    </div>

  </div>
 </div>
</div>