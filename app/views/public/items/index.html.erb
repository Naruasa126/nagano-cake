<div class="mx-auto col-10 col-sm-10">
   <div style="padding-top:20px;">
    <span style="font-size:24px; background-color:#dcdcdc;">
     商品一覧
    </span>
   </div>

 <center>
 <div class="col-11 row">
  <% @items.each do |item| %>
  <div style="padding-top:10px;">
   <div class="card-deck row">
    <div class="col-lg-4">
     <div class="card" style="width: 15rem">
      <img class="card-img-top">
       <div class="col align-self-center">
        <div style="padding-top:10px;">
         <%= attachment_image_tag item, :image, size:"210x130" %>
        </div>
       </div>
       <div class="card-body">
        <p class="card-title"><%= link_to item.name, public_item_path(item.id) %></p>
        <p><%= item.price %>円</p>
       </div>
     </div>
    </div>
   </div>
  </div>
  <% end %>
 </div>
 <%= paginate @items %>
 </center>

</div>
