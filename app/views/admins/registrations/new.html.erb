<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

 <div style="background-color:#c0c0c0;">
  <h2>新規会員登録</h2>
 </div>

  <table class="table">
  <tr>
    <th scope="row">名前</th>
    <td>（姓）</td>
    <td>（名）</td>
  </tr>
   <tr>
    <th scope="row">フリガナ</th>
    <td>（セイ）</td>
    <td>（メイ）</td>
  </tr>
  <tr>
    <th scope="row">メールアドレス</th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <th scope="row">郵便番号（ハイフンなし）</th>
    <td></td>
  </tr>
  <tr>
    <th scope="row">住所</th>
    <td></td>
  </tr>
  <tr>
    <th scope="row">電話番号（ハイフンなし）</th>
    <td></td>
  </tr>
  <tr>
    <th scope="row">パスワード（6文字以上）</th>
    <td><% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <th scope="row">パスワード（確認用）</th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <th scope="row"></th>
    <td><%= f.submit "新規登録" %></td>
  </tr>
 </table>
 <div style="background-color:#c0c0c0;">
  <h2>既に登録済みの方</h2>
 </div>

 <p>からログインしてください。</p>

</div>

<% end %>

<%= render "admins/shared/links" %>
