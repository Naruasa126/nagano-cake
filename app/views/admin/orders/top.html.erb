
<div class="mx-auto col-7 col-sm-10">
 <center>
 <div class="col-9 col-sm-9 text-left">
  <div style="padding-top:20px;">
    <div class="row">
     <span style="font-size:20px; background-color:#dcdcdc;">
      注文履歴一覧
     </span>
    </div>
   </div>
  </div>

   <div class="field">
    <div style="padding-top:20px;">
     <div class="col-sm-10">
     <table class="table">
       <thaed>
       <tr style="background-color:#dcdcdc;">
         <th>
           購入日時
         </th>
         <th>
           購入者
         </td>
         <th>
           注文個数
         </th>
         <th>
           注文ステータス
         </th>
       </tr>
       </thaed>
       <tbody>
        <% @orders.each do |order| %>
         <tr>
           <td>
            <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %>
           </td>
           <td>
             <%= order.customer.full_name %>
           </td>
           <td>
             <% @sum = 0 %>
             <% order.order_details.each do |order_detail| %>
             <% @sum += order_detail.amount %>
             <% end %>
             <%= @sum %>
           </td>
           <td>
            <%= Order.statuses_i18n[order.status] %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
     <%= paginate @orders %>
     </div>
    </div>
   </div>
  </center>
</div>