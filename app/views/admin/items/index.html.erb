
<div class="mx-auto col-7 col-sm-10">
 <div class="col-sm-11 center">
  <div style="padding-top:20px;">
    <div class="row">
     <span style="font-size:20px; background-color:#dcdcdc;">
      商品一覧
     </span>
     <div class="ml-auto text-right">
      <%= link_to new_admin_item_path do %>
       <i class="fas fa-plus fa-2x"></i>
      <% end %>
     </div>
    </div>
   </div>
  </div>

   <div class="field">
    <div style="padding-top:20px;">
     <div class="col-sm-11 center">
     <table class="table">
       <thaed>
       <tr style="background-color:#dcdcdc;">
         <th>
           商品ID
         </th>
         <th>
           商品名
         </td>
         <th>
           税抜価格
         </th>
         <th>
           ジャンル
         </th>
         <th>
           ステータス
         </th>
       </tr>
       </thaed>
       <tbody>
        <% @items.each do |item| %>
         <tr>
           <td>
            <%= item.id%>
           </td>
           <td>
             <%= link_to item.name, admin_item_path(item.id) %>
           </td>
           <td>
             <%= item.price %>
           </td>
           <td>

             <%= item.genre.name %>
           </td>
           <td>
             <% if item.sales_status == true %>
              <p>販売中</p>
             <% else %>
              <p>販売停止中</p>
             <% end %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
     <%= paginate @items %>
     </div>
    </div>
   </div>
</div>
