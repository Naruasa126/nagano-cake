
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

 <div class="mx-auto col-7 col-sm-15">
  <div class="container">
   <div style="padding-top:25px;">
    <span style="font-size:24px; background-color:#dcdcdc;">
     管理者ログイン
    </span>
   </div>

   <div class="field">
    <div style="padding-top:20px;">
     <div class="row">
      <p class="col-6 col-sm-5 text-right">メールアドレス</p>
       <div class="col-sm-6">
         <%= f.email_field :email, :size=>"30px", autofocus: true, autocomplete: "email" %>
       </div>
     </div>
    </div>
   </div>

   <div class="field">
    <div style="padding-top:20px;">
     <div class="row">
      <p class="col-6 col-sm-5 text-right">パスワード</p>
      <div class="col-sm-6">
       <%= f.password_field :password, :size=>"30px", autocomplete: "current-password" %>
      </div>
     </div>
    </div>
   </div>
   <div class="actions">
    <div class="col-sm-7 text-right">
     <div style="padding-top:20px;">
     <%= f.submit "ログイン", class: "btn btn-primary" %>
     </div>
    </div>
   </div>

<% end %>