
<div class="mx-auto col-7 col-sm-10">

 <div class="col-2 col-sm-2 text-right">
  <div style="padding-top:20px;">
     <span style="font-size:20px; background-color:#dcdcdc;">
      会員一覧
     </span>
   </div>
  </div>
  <center>
   <div class="field">
    <div style="padding-top:20px;">
     <div class="col-sm-9 center">
     <table class="table">
       <thaed>
       <tr style="background-color:#dcdcdc;">
         <th>
           会員ID
         </th>
         <th>
           氏名
         </td>
         <th>
           メールアドレス
         </th>
         <th>
           ステータス
         </th>
       </tr>
       </thaed>
       <tbody>
        <% @customers.each do |customer| %>
         <tr>
           <td>
            <%= customer.id%>
           </td>
           <td>
             <%= link_to customer.full_name, admin_customer_path(customer.id) %>
           </td>
           <td>
             <%= customer.email %>
           </td>
           <td>
             <% if customer.is_active == true %>
              <p class= "text-success">有効</p>
             <% else %>
              <p>退会</p>
             <% end %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
     <%= paginate @customers %>
     </div>
    </div>
  </center>
 </div>
</div>