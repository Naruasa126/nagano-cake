
<div class="mx-auto col-10 col-sm-10 ">
 <div class="col-6 col-sm-5 text-center">
   <div style="padding-top:40px;">
    <span style="font-size:20px; background-color:#dcdcdc;">
     <%= @customer.full_name %>さんの会員詳細
    </span>
   </div>
  </div>

 <center>
 <div class="form-group">
 <%= form_with model:@customer, url: admin_customer_path(@customer.id),　local: true do |f| %>
  <table cellpadding="10">
   <tr>
    <th scope="row">会員ID</th>
    <td></td>
    <td colspan="2"><%= @customer.id %></td>
   </tr>
   <tr>
    <th scope="row" width="220">氏名</th>
    <td>（姓）</td>
    <td width="100"><%= f.text_field :last_name %></td>
    <td align="right" width="90">（名）</td>
    <td><%= f.text_field :first_name %></td>
   </tr>
   <tr>
    <th scope="row">フリガナ</th>
    <td>（セイ）</td>
    <td  width="100"><%= f.text_field :last_name_kana %></td>
    <td align="right" width="90">（メイ）</td>
    <td><%= f.text_field :first_name_kana %></td>
   </tr>
   <tr>
    <th scope="row">郵便番号（ハイフンなし）</th>
    <td></td>
    <td colspan="2"><%= f.text_field :postal_code %></td>
   </tr>
   <tr>
    <th scope="row">住所</th>
    <td></td>
    <td colspan="3"><%= f.text_field :address, :size=>"50px" %></td>
    <td></td>
   </tr>
   <tr>
    <th scope="row">電話番号（ハイフンなし）</th>
    <td></td>
    <td colspan="2"><%= f.text_field :telephone_number %></td>
   </tr>
   <tr>
    <th scope="row">メールアドレス</th>
    <td></td>
    <td width="200" colspan="2"><%= f.email_field :email, autofocus: true %></td>
   </tr>
   <tr>
     <th scope="row">会員ステータス</th>
     <td></td>
     <td>
       <%= f.radio_button :is_active, true %>
       <%= f.label :is_active, '有効' %>
       <%= f.radio_button :is_active, false %>
       <%= f.label :is_active, '退会' %>
     </td>
   </tr>

   <tr>
    <th scope="row"></th>
    <td></td>
    <td colspan="2"><%= f.submit '変更を保存', class: "btn btn-success" %></td>
   </tr>
   <tr>
  </table>
 </div>
 </center>

 <% end %>
</div>